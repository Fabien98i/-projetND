{% extends 'base.html.twig' %}

{% block title %} Entreprises {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> Liste de toutes les entreprises </h1>

    {% if entreprises|length > 0  %}
    {% for entreprise in entreprises %}
    <p>
        {{ entreprise.getId() }}
        {{ entreprise.getNomEntreprise() }}
        {{ entreprise.getAdresseEntreprise() }}
    </p>
    {% else %}
        <p>Aucune information disponnible, veuillez insérer des données</p>
    {% endfor %}
    {% endif %}
</div>

<a href = "/insert" > Ajout informations individus </a>
</br>
<a href = "/insertent" > Ajout informations entreprises </a>
</br>
<a href = "/insertf" > Ajout formations </a>
</br>

{% endblock %}

