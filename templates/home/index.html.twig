{% extends 'base.html.twig' %}

{% block title %}Page Indexe{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> Liste de tous les individus </h1>
    {% if individus|length > 0  %}
    {% for individu in individus %}
    <p>
        {{ individu.getPrenomIndividu() }} 
        {{ individu.getNomIndividu() }}
        {{ individu.getAdresseIndividu() }}
        {{ individu.getTypeIndividu() }}
    </p>
   {% else %}
        <p>Aucune information disponnible, veuillez insérer des données</p>
    {% endfor %}
    {% endif %}
</div>

<a href = "/insert" > Ajout informations individus </a>
</br>
<a href = "/insertent" > Ajout informations entreprises </a>
</br>
<a href = "/insertf" > Ajout formations </a>
</br>

{% endblock %}

